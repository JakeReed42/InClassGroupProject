@model Employee

@{
    ViewData["Title"] = "AddEmployee";
}

<h2>AddEmployee</h2>

<form asp-action="AddEmployee" method="post">


    <div class="form-group">
        <label>First Name</label>
        <input asp-for="Firstname" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="Lastname" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Employee</label>
        <select asp-for="EmployeeID" asp-items="ViewBag.Employee" class="form-control"> </select>
    </div>

    <div class="form-group">
        <input type="submit" value="Add New Employee" class="btn btn-default" />
    </div>
</form>