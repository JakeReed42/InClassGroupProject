@model Office
@{
    ViewData["Title"] = "AddOffice";
}

<h2>Add Office</h2>

<form asp-action="AddOffice" method="post">

    <div class="form-group">
        <label>Office Name</label>
        <input asp-for="OfficeName" />
    </div>

    <div class="form-group">
        <label>Office Address</label>
        <input asp-for="OfficeAddress" />
    </div>

    <div class="form-group">
        <label>Office Phone Number</label>
        <input asp-for="OfficePhoneNumber" />
    </div>

    <div class="form-group">
        <input type="submit" value="Add New Office" class="btn btn-default" />
    </div>

</form>
